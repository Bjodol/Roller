package roller.main.roller3;

import android.os.Bundle;
import android.app.Activity;
import android.view.Menu;
import android.widget.TextView;

public class MainActivity extends Activity {
	
	public String type = "";
	public int dice = 0;
	public int roll = 0;
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.main, menu);
		return true;
	}
	
	public void updateText(){
		TextView view = (TextView) findViewById(R.id.dice_type);
		view.setText(type);
	}
	
	public void roll(){
		TextView currentRollText = (TextView) findViewById(R.id.current_roll_text);
		TextView LastRollValue = (TextView) findViewById(R.id.last_roll_value);
	}
	
	public void d20(){
		dice = 20;
		type = "d20";
		updateText();
	}
	
	public void d12(){
		dice = 12;
		type = "d12";
		updateText();
	}
	public void d10(){
		dice = 10;
		type = "d10";
		updateText();
	}
	public void d8(){
		dice = 8;
		type = "d8";
		updateText();
	}
	public void d6(){
		dice = 6;
		type = "d6";
		updateText();
	}
	public void d4(){
		dice = 4;
		type = "d4";
		updateText();
	}

}
